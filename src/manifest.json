{
  "name": "Tab Group",
  "version": "1.0",
  "description": "Group several tabs within only one tab",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "webNavigation",
    "<all_urls>",
    "storage",
    "contextMenus"
  ],
  "web_accessible_resources": [
    "*.svg"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
 